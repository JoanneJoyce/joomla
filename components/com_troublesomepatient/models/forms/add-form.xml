<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset
				name="details"
				label="COM_HELLOWORLD_HELLOWORLD_DETAILS"
				addfieldpath="/administrator/components/com_troublesomepatient/models/fields"
	>
		<field
				name="search_patient"
				type="text"
				label=""
				description="COM_HELLOWORLD_HELLOWORLD_GREETING_DESC"
				class="inputbox"
				required="false"
                hint=""
				default=""
				maxlength="60"
				/>
       

		<field
			name="patient_id"
			type="SelectPatient"
			label=""
			/>
		
        <field
				name="patient_action"
				type="category"
				extension="com_troublesomepatient"
				default=""
				label=""
				description=""
				size="1"
                >
			<option value="編集">編集</option>
			<option value="削除">削除</option>
		</field>

		<field
				name="pid"
				type="text"
				label=""
				required="false"
				size="80"
				maxlength="10"
                />

		<field
				name="pname"
				type="text"
				label=""
				required="false"
				size="80"
				maxlength="60"
                />

		<field
				name="furigana"
				type="text"
				label=""
				required="false"
				size="80"
				maxlength="60"
                />
		
		<field
				name="bday"
				type="text"
				label=""
				required="false"
				size="0"
				maxlength="10"
                />
		
		<field
				name="sex"
				type="radio"
				label=""
				default="0"
				>
				<option value="0">男性</option>
				<option value="1">女性</option>
		</field>

		<field
				name="occur_date"
				type="text"
				label=""
				required="false"
				size="0"
				maxlength="10"
                />

		<field
		
				name="contents"
				type="textarea"
				label=""
				rows="10"
				cols="60"
				/>
		
		<field
			name="event"
			type="EventRadio"
			label=""
			/>
		
        <field
				name="captcha"
				type="captcha"
				label="COM_HELLOWORLD_HELLOWORLD_FIELD_CAPTCHA_LABEL"
				description="COM_HELLOWORLD_HELLOWORLD_FIELD_CAPTCHA_DESC"
                validate="captcha"
                >
		</field>
        <fields name="params">
            <field
                    name="show_category"
                    type="list"
                    label="Display category or not?"
                    description="COM_HELLOWORLD_HELLOWORLD_FIELD_SHOW_CATEGORY_DESC"
                    default=""
                    useglobal="true"
            >
                <option value="0">JHIDE</option>
                <option value="1">JSHOW</option>
            </field>
        </fields>
    </fieldset>
</form>