<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.8" type="template">
    <name>medical partner</name>
    <version>1.0</version>
    <creationDate>5/11/2018</creationDate>
    <author>Medical Partner</author>
    <authorEmail>admin@medicalpartner.jp</authorEmail>
    <copyright>Copyright (C) 2018 NIHON INTER SYSTEMS Co., Ltd. All rights reserved</copyright>
    <description>TPL_MEDICAL_PARTNER_XML_DESCRIPTION</description>
    <files>
        <filename>favicon.ico</filename>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_thumbnail.png</filename>
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>language</folder>
    </files>
    <positions>
        <position>header</position>
        <position>nav</position>
        <position>left-sidebar</position>
        <position>right-sidebar</position>
        <position>center-left</position>
        <position>center</position>
        <position>center-right</position>
        <position>footer</position>
    </positions>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_medicalpartner.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_medicalpartner.sys.ini</language>
        <language tag="ja-JP">ja-JP/ja-JP.tpl_medicalpartner.ini</language>
        <language tag="ja-JP">ja-JP/ja-JP.tpl_medicalpartner.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field
                    name="templateColor"
                    type="color"
                    label="TPL_MEDICAL_PARTNER_COLOR_LABEL"
                    description="TPL_MEDICAL_PARTNER_COLOR_DESC"
                    class=""
                    default="#FFF"
                />

                <field 
					name="templateBackgroundColor" 
					type="color" 
					label="TPL_MEDICAL_PARTNER_BACKGROUND_COLOR_LABEL"
					description="TPL_MEDICAL_PARTNER_BACKGROUND_COLOR_DESC" 
					class="" 
					default="#FFF"
				/>

				<field 
					name="logoFile" 
					type="media" 
					label="TPL_MEDICAL_PARTNER_LOGO_LABEL"
					description="TPL_MEDICAL_PARTNER_LOGO_DESC" 
					class="" 
					default=""
				/>

				<field 
					name="sitetitle"  
					type="text" 
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					default=""
					filter="string" 
				/>

				<field 
					name="sitedescription"  
					type="text" 
					label="JGLOBAL_DESCRIPTION"
					description="JGLOBAL_SUBHEADING_DESC"
					default=""
					filter="string" 
				/>

				<field 
					name="googleFont"
					type="radio"
					label="TPL_MEDICAL_PARTNER_FONT_LABEL"
					description="TPL_MEDICAL_PARTNER_FONT_DESC"
					class="btn-group btn-group-yesno"
					default="1"
					>
					<option value="1">JYES</option>
					<option value="0">JNO</option>
				</field>

				<field 
					name="googleFontName" 
					type="text" 
					label="TPL_MEDICAL_PARTNER_FONT_NAME_LABEL"
					description="TPL_MEDICAL_PARTNER_FONT_NAME_DESC" 
					class="" 
					default="Open+Sans"
					showon="googleFont:1" 
				/>

				<field 
					name="fluidContainer"
					type="radio"
					label="TPL_MEDICAL_PARTNER_FLUID_LABEL"
					description="TPL_MEDICAL_PARTNER_FLUID_DESC"
					class="btn-group btn-group-yesno"
					default="0"
					>
					<option value="1">TPL_MEDICAL_PARTNER_FLUID</option>
					<option value="0">TPL_MEDICAL_PARTNER_STATIC</option>
				</field>
            </fieldset>
        </fields>
    </config>
</extension>